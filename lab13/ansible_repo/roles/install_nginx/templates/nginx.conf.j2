error_log /var/log/nginx/error.log crit;
error_log syslog:server={{ elk_ip_addr }}:5000,facility=local7,tag=nginx_error,severity=info;

events {
    worker_connections 1024;
}

http {
    server {
        listen       {{ nginx_listen_port }} default_server;
        server_name  default_server;
        root         /usr/share/nginx/html;

        access_log syslog:server={{ elk_ip_addr }}:5000,facility=local7,tag=nginx_access,severity=info;

        location / {
        }
    }
}
